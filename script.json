{
  "language": "Meteor",
  "envVars": [
    {
      "key": "APP_LOCATION",
      "description": "The location of the Meteor app folder in the repository. Set \".\" for root",
      "defaultValue": "."
    },
    {
      "key": "ROOT_URL",
      "description": "http://appname.apps.orion.hosting",
      "defaultValue": "http://appname.apps.orion.hosting"
    },
    {
      "key": "MONGO_URL",
      "description": "URL for the Mongo Database",
      "defaultValue": "mongodb://localhost:27017/meteor"
    },
    {
      "key": "MAIL_URL",
      "description": "URL to send the emails",
      "defaultValue": "smtp://xx.com",
      "optional": true
    },
    {
      "key": "METEOR_SETTINGS",
      "description": "Meteor settings JSON",
      "defaultValue": "{}"
    }
  ]
}
